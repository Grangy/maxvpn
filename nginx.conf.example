# Nginx конфигурация для MaxGroot Next.js приложения
# Скопируйте этот файл в /etc/nginx/sites-available/maxgroot
# И создайте симлинк: ln -s /etc/nginx/sites-available/maxgroot /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name grangy.ru www.grangy.ru;

    # Редирект на HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name grangy.ru www.grangy.ru;

    # SSL сертификаты (настройте пути к вашим сертификатам)
    ssl_certificate /etc/letsencrypt/live/grangy.ru/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/grangy.ru/privkey.pem;
    
    # SSL настройки
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Увеличенные размеры для больших запросов
    client_max_body_size 10M;
    client_body_buffer_size 128k;

    # Логи
    access_log /var/log/nginx/maxgroot_access.log;
    error_log /var/log/nginx/maxgroot_error.log;

    # Gzip сжатие
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;

    # Проксирование на Next.js (обычно на порту 3000)
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Заголовки для правильной работы Next.js
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # WebSocket поддержка (если нужно)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Буферизация
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # Статические файлы (опционально, можно отдавать напрямую через nginx)
    location /_next/static {
        proxy_pass http://localhost:3000;
        proxy_cache_valid 200 60m;
        add_header Cache-Control "public, immutable";
        expires 1y;
    }

    # Favicon и другие статические файлы
    location ~* \.(ico|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot)$ {
        proxy_pass http://localhost:3000;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Блокировка доступа к служебным файлам
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}
